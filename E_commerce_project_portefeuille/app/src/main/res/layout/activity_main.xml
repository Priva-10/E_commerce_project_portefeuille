<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alwaysDrawnWithCache="false"
    android:backgroundTintMode="multiply"
    android:visibility="visible"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="25dp"
                android:src="@drawable/my_rounded_bg"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:drawingCacheQuality="high"
                android:src="@drawable/fb_img_16401684590548146"
                android:layout_alignTop="@id/background"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/mes_fonds"
                android:layout_below="@id/background"
                android:layout_alignTop="@id/background"
                android:layout_alignBottom="@id/my_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="174dp"
                android:layout_marginBottom="-174dp"
                android:layout_paddingBottom="50dp"
                android:foregroundTint="@color/white"
                android:text="Mon portefeuille"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mes_fonds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginHorizontal="60dp"
                android:background="@color/white"
                android:text="XOF 50000000"
                android:textColor="#151414"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="230dp"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="272dp"
                tools:ignore="MissingConstraints"
                android:layout_alignTop="@id/background"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="25dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button">
                <com.google.android.material.chip.Chip
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="Recharge"
                    android:textColor="@color/white"
                    android:textSize="96sp"
                    app:chipSurfaceColor="@android:color/holo_blue_dark"
                    />


                <com.google.android.material.chip.Chip
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipIconSize="26dp"
                    android:text="Retrait"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:textSize="96sp"
                    app:chipBackgroundColor="@android:color/holo_blue_dark"
                    tools:ignore="DuplicateIds" />

            </RelativeLayout>


        </LinearLayout>


